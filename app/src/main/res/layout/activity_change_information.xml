<?xml version="1.0" encoding="utf-8"?>
<com.xuexiang.xui.widget.layout.XUIFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:folding-cell="http://schemas.android.com/tools"
    android:orientation="vertical">
    <com.xuexiang.xui.widget.layout.XUILinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@color/app_color_theme_7"/>
    <com.xuexiang.xui.widget.layout.XUILinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:clickable="true"
            android:id="@+id/me_item_1"
            android:layout_marginTop="110dp"
            android:layout_marginBottom="-20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="20dp"
            android:orientation="vertical"
            android:translationZ="2dp">
        </androidx.cardview.widget.CardView>
    </com.xuexiang.xui.widget.layout.XUILinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="80dp"
        android:layout_marginLeft="20dp"
        app:cardCornerRadius="36dp"
        android:layout_width="72dp"
        app:cardBackgroundColor="@color/white"
        android:layout_height="72dp">
        <com.xuexiang.xui.widget.imageview.RadiusImageView
            app:riv_corner_radius="35dp"
            android:layout_gravity="center"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/avatar"/>
    </androidx.cardview.widget.CardView>
    <com.xuexiang.xui.widget.layout.XUILinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="160dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="昵称"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/item_1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:background="@null"
                android:singleLine="true"
                android:textColorHint="@color/textColorHint"
                android:textSize="16sp" />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@color/input_dvier" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="性别"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/item_2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:background="@null"
                android:singleLine="true"
                android:textColorHint="@color/textColorHint"
                android:textSize="16sp" />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@color/input_dvier" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="年龄"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/item_3"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:background="@null"
                android:singleLine="true"
                android:textColorHint="@color/textColorHint"
                android:textSize="16sp" />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@color/input_dvier" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="所在地"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/item_4"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:background="@null"
                android:singleLine="true"
                android:textColorHint="@color/textColorHint"
                android:textSize="16sp" />
        </LinearLayout>
        <ImageView
            android:id="@+id/reg_diver2"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@color/input_dvier" />

    </com.xuexiang.xui.widget.layout.XUILinearLayout>
    <com.xuexiang.xui.widget.layout.XUILinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:background="@color/app_color_theme_7"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="17dp"
            android:layout_height="25dp"
            android:layout_margin="10dp"
            android:src="@drawable/arrow_left" />
        <TextView
            android:layout_marginTop="9dp"
            android:gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的资料"
            app:sRightTextColor="@color/color_bg_loading"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/confirm"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:text="保存"
            android:textColor="@color/white"
            android:textSize="18dp"/>
    </com.xuexiang.xui.widget.layout.XUILinearLayout>
</com.xuexiang.xui.widget.layout.XUIFrameLayout>