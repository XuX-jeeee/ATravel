<?xml version="1.0" encoding="utf-8"?>
<com.xuexiang.xui.widget.layout.XUILinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:folding-cell="http://schemas.android.com/tools">
    <com.xuexiang.xui.widget.layout.XUIFrameLayout
        android:id="@+id/s1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.xuexiang.xui.widget.layout.XUILinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/app_color_theme_7"/>
        <com.xuexiang.xui.widget.layout.XUILinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:clickable="true"
                android:id="@+id/item_1"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="-20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:translationZ="2dp">
                <com.xuexiang.xui.widget.layout.XUILinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <com.xuexiang.xui.widget.layout.XUILinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">
                        <ImageView
                            android:layout_marginLeft="20dp"
                            android:layout_gravity="center"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/other"/>
                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="70dp"
                            android:gravity="center"
                            android:textSize="20dp"
                            android:text="其他分心情况"
                            android:textStyle="bold" />
                    </com.xuexiang.xui.widget.layout.XUILinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="5dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_weight="2"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:text="拿东西"
                                android:gravity="center"
                                android:textSize="17dp"/>
                            <com.xuexiang.xui.widget.progress.HorizontalProgressView
                                android:id="@+id/progress_1"
                                android:layout_weight="10"
                                android:layout_marginTop="-10dp"
                                app:hpv_corner_radius="10dp"
                                android:layout_width="0dp"
                                android:layout_gravity="center_vertical"
                                android:layout_height="600dp"
                                app:hpv_end_color="#1DE9B6"
                                app:hpv_end_progress="0"
                                app:hpv_isTracked="true"
                                app:hpv_progress_duration="2600"
                                app:hpv_progress_textVisibility="false"
                                app:hpv_start_color="#1DE9B6"
                                app:hpv_track_color="#f4f4f4"
                                app:hpv_track_width="25dp" />
                            <TextView
                                android:id="@+id/progress_1_times"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="3次"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_weight="2"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:text="喝水"
                                android:gravity="center"
                                android:textSize="17dp"/>
                            <com.xuexiang.xui.widget.progress.HorizontalProgressView
                                android:id="@+id/progress_2"
                                android:layout_weight="10"
                                android:layout_marginTop="-10dp"
                                app:hpv_corner_radius="10dp"
                                android:layout_width="0dp"
                                android:layout_gravity="center_vertical"
                                android:layout_height="600dp"
                                app:hpv_end_color="@color/app_color_theme_8"
                                app:hpv_end_progress="0"
                                app:hpv_isTracked="true"
                                app:hpv_progress_duration="2600"
                                app:hpv_progress_textVisibility="false"
                                app:hpv_start_color="@color/app_color_theme_8"
                                app:hpv_track_color="#f4f4f4"
                                app:hpv_track_width="25dp" />
                            <TextView
                                android:id="@+id/progress_2_times"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="3次"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_weight="2"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:text="转身"
                                android:gravity="center"
                                android:textSize="17dp"/>
                            <com.xuexiang.xui.widget.progress.HorizontalProgressView
                                android:id="@+id/progress_3"
                                android:layout_weight="10"
                                android:layout_marginTop="-10dp"
                                app:hpv_corner_radius="10dp"
                                android:layout_width="0dp"
                                android:layout_gravity="center_vertical"
                                android:layout_height="600dp"
                                app:hpv_end_color="#FF9100"
                                app:hpv_end_progress="0"
                                app:hpv_isTracked="true"
                                app:hpv_progress_duration="2600"
                                app:hpv_progress_textVisibility="false"
                                app:hpv_start_color="#FF9100"
                                app:hpv_track_color="#f4f4f4"
                                app:hpv_track_width="25dp" />
                            <TextView
                                android:id="@+id/progress_3_times"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="3次"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_weight="2"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:text="理头发"
                                android:gravity="center"
                                android:textSize="17dp"/>
                            <com.xuexiang.xui.widget.progress.HorizontalProgressView
                                android:id="@+id/progress_4"
                                android:layout_weight="10"
                                android:layout_marginTop="-10dp"
                                app:hpv_corner_radius="10dp"
                                android:layout_width="0dp"
                                android:layout_gravity="center_vertical"
                                android:layout_height="600dp"
                                app:hpv_end_color="#F50057"
                                app:hpv_end_progress="0"
                                app:hpv_isTracked="true"
                                app:hpv_progress_duration="2600"
                                app:hpv_progress_textVisibility="false"
                                app:hpv_start_color="#F50057"
                                app:hpv_track_color="#f4f4f4"
                                app:hpv_track_width="25dp" />
                            <TextView
                                android:id="@+id/progress_4_times"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="3次"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_weight="2"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:text="犯困"
                                android:gravity="center"
                                android:textSize="17dp"/>

                            <com.xuexiang.xui.widget.progress.HorizontalProgressView
                                android:id="@+id/progress_5"
                                android:layout_width="0dp"
                                android:layout_height="600dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="-10dp"
                                android:layout_weight="10"
                                app:hpv_corner_radius="10dp"
                                app:hpv_end_color="#00E5FF"
                                app:hpv_end_progress="0"
                                app:hpv_isTracked="true"
                                app:hpv_progress_duration="2600"
                                app:hpv_progress_textVisibility="false"
                                app:hpv_start_color="#00E5FF"
                                app:hpv_track_color="#f4f4f4"
                                app:hpv_track_width="25dp" />

                            <TextView
                                android:id="@+id/progress_5_times"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="3次"/>
                        </LinearLayout>

                    </LinearLayout>
                </com.xuexiang.xui.widget.layout.XUILinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:clickable="true"
                android:id="@+id/item_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                app:cardCornerRadius="10dp"
                android:translationZ="2dp"
                android:layout_marginBottom="50dp">

            </androidx.cardview.widget.CardView>



        </com.xuexiang.xui.widget.layout.XUILinearLayout>



        <com.xuexiang.xui.widget.layout.XUILinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_color_theme_7"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/back"
                android:layout_margin="10dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/arrow_left"/>
            <TextView
                android:layout_marginTop="9dp"
                android:gravity="left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="更多"
                app:sRightTextColor="@color/color_bg_loading"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/white"/>
        </com.xuexiang.xui.widget.layout.XUILinearLayout>
    </com.xuexiang.xui.widget.layout.XUIFrameLayout>
</com.xuexiang.xui.widget.layout.XUILinearLayout>
