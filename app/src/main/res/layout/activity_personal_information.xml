<?xml version="1.0" encoding="utf-8"?>
<com.xuexiang.xui.widget.layout.XUIFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:folding-cell="http://schemas.android.com/tools"
    android:orientation="vertical">
    <com.xuexiang.xui.widget.layout.XUILinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@color/app_color_theme_7"/>
    <com.xuexiang.xui.widget.layout.XUILinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:clickable="true"
            android:id="@+id/me_item_1"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="-20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="20dp"
            android:orientation="vertical"
            android:translationZ="2dp">
        </androidx.cardview.widget.CardView>
    </com.xuexiang.xui.widget.layout.XUILinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="70dp"
        android:layout_marginLeft="20dp"
        app:cardCornerRadius="36dp"
        android:layout_width="72dp"
        app:cardBackgroundColor="@color/white"
        android:layout_height="72dp">
        <com.xuexiang.xui.widget.imageview.RadiusImageView
            app:riv_corner_radius="35dp"
            android:layout_gravity="center"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/avatar"/>
    </androidx.cardview.widget.CardView>
    <com.xuexiang.xui.widget.layout.XUILinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="160dp">
        <com.xuexiang.xui.widget.layout.XUILinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                app:cardElevation="0dp"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                    android:id="@+id/info_name"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    app:sLeftTextString="昵称"
                    app:sRightTextColor="@color/color_bg_loading"
                    app:sLeftTextColor="@color/black"
                    app:sRightTextString="贪吃熊"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                app:cardElevation="0dp"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                    android:id="@+id/info_relatives_phone"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    app:sLeftTextString="紧急联系人"
                    app:sRightTextColor="@color/color_bg_loading"
                    app:sLeftTextColor="@color/black"
                    app:sRightTextString="110"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                app:cardElevation="0dp"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                    android:id="@+id/info_gender"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    app:sLeftTextString="性别"
                    app:sRightTextColor="@color/color_bg_loading"
                    app:sLeftTextColor="@color/black"
                    app:sRightTextString="男"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                app:cardElevation="0dp"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                    android:id="@+id/info_age"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    app:sLeftTextString="年龄"
                    app:sRightTextColor="@color/color_bg_loading"
                    app:sLeftTextColor="@color/black"
                    app:sRightTextString="28岁"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardElevation="0dp"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                    android:id="@+id/info_location"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    app:sLeftTextString="所在地"
                    app:sRightTextColor="@color/color_bg_loading"
                    app:sLeftTextColor="@color/black"
                    app:sRightTextString=""/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:cardElevation="0dp">
                <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
                    android:id="@+id/change_personal_information_btn"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    app:sLeftTextString="修改资料"
                    app:sLeftTextColor="@color/black"
                    app:sRightIconRes="@drawable/arrow_right"
                    app:sRightIconHeight="20dp"
                    app:sRightIconWidth="20dp"/>
            </androidx.cardview.widget.CardView>

        </com.xuexiang.xui.widget.layout.XUILinearLayout>
    </com.xuexiang.xui.widget.layout.XUILinearLayout>
    <com.xuexiang.xui.widget.layout.XUILinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_color_theme_7"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/back"
            android:layout_margin="10dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/arrow_left"/>
        <TextView
            android:layout_marginTop="9dp"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="我的资料"
            app:sRightTextColor="@color/color_bg_loading"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/white"/>
    </com.xuexiang.xui.widget.layout.XUILinearLayout>
</com.xuexiang.xui.widget.layout.XUIFrameLayout>