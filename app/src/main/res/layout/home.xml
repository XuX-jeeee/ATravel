<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:folding-cell="http://schemas.android.com/tools">
    <com.xuexiang.xui.widget.layout.XUIFrameLayout
        android:id="@+id/s1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.xuexiang.xui.widget.layout.XUILinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/app_color_theme_7"/>
        <com.xuexiang.xui.widget.layout.XUILinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_marginBottom="30dp"
                android:clickable="true"
                android:id="@+id/home_cardview"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="130dp"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:cardCornerRadius="15dp"
                android:orientation="vertical"
                android:translationZ="2dp">
                <com.xuexiang.xui.widget.layout.XUILinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <com.xuexiang.xui.widget.layout.XUILinearLayout
                        android:layout_weight="20"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <com.xuexiang.xui.widget.layout.XUILinearLayout
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_marginLeft="10dp"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/driving"/>
                            <TextView
                                android:layout_marginLeft="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="行驶时长"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:textSize="15dp"/>
                        </com.xuexiang.xui.widget.layout.XUILinearLayout>
                        <TextView
                            android:id="@+id/driving_time_text"
                            android:layout_marginLeft="30dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="暂无数据"
                            android:gravity="center_vertical"
                            android:textStyle="bold"
                            android:textColor="#1DE9B6"
                            android:textSize="25dp"/>
                        <com.xuexiang.xui.widget.layout.XUILinearLayout
                            android:layout_marginTop="25dp"
                            android:layout_marginLeft="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_marginLeft="8dp"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@drawable/location"/>
                            <TextView
                                android:layout_marginLeft="6dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="当前位置"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:textSize="15dp"/>
                        </com.xuexiang.xui.widget.layout.XUILinearLayout>
                        <TextView
                            android:id="@+id/location"
                            android:layout_marginLeft="30dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="杭州市钱塘区学林街"
                            android:gravity="center_vertical"
                            android:textStyle="bold"
                            android:textColor="#1DE9B6"
                            android:textSize="15dp"/>
                    </com.xuexiang.xui.widget.layout.XUILinearLayout>
                    <com.xuexiang.xui.widget.layout.XUILinearLayout
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <com.xuexiang.xui.widget.progress.CircleProgressView
                            android:id="@+id/driving_time_progress"
                            android:layout_width="160dp"
                            android:layout_height="160dp"
                            android:layout_gravity="center_vertical"
                            app:cpv_animate_type="AccelerateDecelerateInterpolator"
                            app:cpv_circle_broken="false"
                            app:cpv_end_color="#00EEFA"
                            app:cpv_end_progress="100"
                            app:cpv_isFilled="false"
                            app:cpv_isTracked="true"
                            app:cpv_progress_duration="1200"
                            app:cpv_progress_textColor="#28AAFB"
                            app:cpv_progress_textSize="18sp"
                            app:cpv_progress_width="15dp"
                            app:cpv_start_color="#0052a3"
                            app:cpv_start_progress="0"
                            app:cpv_track_color="#2A03A9F4"
                            app:cpv_track_width="15dp" />
                    </com.xuexiang.xui.widget.layout.XUILinearLayout>
                </com.xuexiang.xui.widget.layout.XUILinearLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:clickable="true"
                    android:id="@+id/home_cardView_1"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center">

                            <ImageView
                                android:id="@+id/card_color1"
                                android:layout_marginTop="14dp"
                                android:layout_marginLeft="20dp"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/tp"
                                app:cardCornerRadius="3dp" />
                            <TextView
                                android:layout_marginTop="17dp"
                                android:layout_marginLeft="20dp"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="17dp"
                                android:text="体温"/>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/temperature"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="36.9℃"
                            android:textSize="23dp"
                            android:gravity="center"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:clickable="true"
                    android:id="@+id/home_cardView_2"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="130dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center">
                            <ImageView
                                android:id="@+id/card_color2"
                                android:layout_marginTop="18dp"
                                android:layout_marginLeft="20dp"
                                android:layout_width="27dp"
                                android:layout_height="27dp"
                                android:src="@drawable/heartbeat2"
                                app:cardCornerRadius="3dp" />
                            <TextView
                                android:textSize="17dp"
                                android:layout_marginTop="17dp"
                                android:layout_marginLeft="20dp"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="心率"/>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/heart_rate"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="72次/分"
                            android:textSize="23dp"
                            android:gravity="center"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="0dp"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:clickable="true"
                    android:id="@+id/home_cardView_3"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center">
                            <ImageView
                                android:id="@+id/card_color3"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginLeft="22dp"
                                android:layout_marginTop="14dp"
                                android:src="@drawable/bloodpressure"
                                app:cardCornerRadius="3dp" />
                            <TextView
                                android:textSize="17dp"
                                android:layout_marginTop="17dp"
                                android:layout_marginLeft="19dp"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="血压"/>
                        </LinearLayout>
                        <TextView
                            android:layout_marginVertical="7dp"
                            android:id="@+id/top_blood_pressure"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="上压：113mmHg"
                            android:textSize="15dp"
                            android:gravity="center"/>
                        <TextView

                            android:id="@+id/bottom_blood_pressure"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="下压：113mmHg"
                            android:textSize="15dp"
                            android:gravity="center"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:clickable="true"
                    android:id="@+id/home_cardView_4"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="130dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center">
                            <ImageView
                                android:id="@+id/card_color4"
                                android:layout_marginTop="17dp"
                                android:layout_marginLeft="22dp"
                                android:layout_width="27dp"
                                android:layout_height="27dp"
                                android:src="@drawable/ox"
                                app:cardCornerRadius="3dp" />
                            <TextView
                                android:textSize="17dp"
                                android:layout_marginTop="17dp"
                                android:layout_marginLeft="20dp"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="血氧"/>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/blood_oxygen"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="97HbO₂"
                            android:textSize="23dp"
                            android:gravity="center"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="你知道吗？"
                android:textSize="25dp"/>
            <androidx.cardview.widget.CardView
                android:layout_marginLeft="-10dp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                app:cardBackgroundColor="@color/accent"
                android:layout_height="40dp"
                app:cardCornerRadius="10dp">
                <TextView
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@color/accent"
                    android:textColor="@color/white"
                    android:text="车技千般好，杯酒失安全"
                    android:textSize="15dp"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp">
                <ImageView
                    android:id="@+id/url"
                    android:layout_width="wrap_content"
                    android:layout_height="560dp"
                    android:src="@drawable/news"/>
            </androidx.cardview.widget.CardView>
        </com.xuexiang.xui.widget.layout.XUILinearLayout>
        <TextView
            android:id="@+id/hello"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="60dp"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="早上好，贪吃熊！"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/white"/>
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/cje"/>
        <TextView
            android:id="@+id/now_temp"
            android:layout_marginTop="60dp"
            android:layout_marginRight="22dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="19:36"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_margin="5dp"
                    app:cardCornerRadius="36dp"
                    android:layout_width="42dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_height="42dp">
                    <com.xuexiang.xui.widget.imageview.RadiusImageView
                        app:riv_corner_radius="35dp"
                        android:layout_gravity="center"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/avatar"/>
                </androidx.cardview.widget.CardView>

    </com.xuexiang.xui.widget.layout.XUIFrameLayout>
</ScrollView>
